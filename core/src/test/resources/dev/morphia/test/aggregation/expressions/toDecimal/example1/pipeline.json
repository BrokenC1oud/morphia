priceQtyConversionStage = { 
   $addFields: { 
      convertedPrice: { $toDecimal: "$price" },
      convertedQty: { $toInt: "$qty" },
   }
};

totalPriceCalculationStage = { 
   $project: { item: 1, totalPrice: { $multiply: [ "$convertedPrice", "$convertedQty" ] } }
};
db.orders.aggregate( [
   priceQtyConversionStage,
   totalPriceCalculationStage
] 
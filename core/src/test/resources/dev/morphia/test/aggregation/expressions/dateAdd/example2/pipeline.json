   [
      {
         $match: 
            {
               $expr:
                  {
                     $gt:
                        [ "$deliveryDate",
                          { 
                             $dateAdd:
                                { 
                                   startDate: "$purchaseDate",
                                   unit: "day",
                                   amount: 5
                                } 
                           }
                        ]
                  }
            }
       },
       { 
          $project: 
             {
                _id: 0,
                custId: 1,
                purchased:
                   {
                       $dateToString: 
                          {
                             format: "%Y-%m-%d",
                             date: "$purchaseDate"
                          }
                   },
                delivery:
                   {
                      $dateToString:
                         {
                            format: "%Y-%m-%d",
                            date: "$deliveryDate"
                         }
                   }
             }
       } 
   ]